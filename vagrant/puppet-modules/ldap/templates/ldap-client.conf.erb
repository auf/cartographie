#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.
# This file is managed by puppet

<% if scope.lookupvar('ldap::client::base') != '' %>
BASE  <%= scope.lookupvar('ldap::client::base') %>
<% end -%>
<% if scope.lookupvar('ldap::client::uri') != '' %>
URI  <%= scope.lookupvar('ldap::client::uri') -%>
<% else %>
#URI	ldap://ldap.example.com ldap://ldap-master.example.com:666
<% end -%>

#SIZELIMIT	12
#TIMELIMIT	15
#DEREF		never

# TLS certificates (needed for GnuTLS)
TLS_CACERT	<%= scope.lookupvar('ldap::params::tls_cacert') %>
<% if scope.lookupvar('ldap::client::tls_reqcert') != '' -%>
TLS_REQCERT <%= scope.lookupvar('ldap::client::tls_reqcert') %>
<% end -%>
